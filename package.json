{
  "name": "calendar-be",
  "version": "1.0.0",
  "description": "Node.js backend for calendar-todo-app using Express and Prisma (MySQL).",
  "main": "src/index.ts",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "start": "node dist/index.js",
    "build": "tsc",
    "migrate": "prisma migrate dev",
    "generate": "prisma generate",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "prepare": "husky install",
    "docker:local": "docker-compose -f docker-compose.local.yml up -d --build",
    "test": "jest --config jest.config.cjs --coverage",
    "seed": "ts-node prisma/seed.ts"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^4.16.2",
    "@types/amqplib": "^0.10.7",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "amqplib": "^0.10.9",
    "bull": "^4.16.5",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "jest": "^30.1.3",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "typescript-eslint": "^8.44.0",
    "uuid": "^13.0.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/socket.io": "^3.0.1",
    "@types/socket.io-client": "^1.4.36",
    "eslint": "^8.0.0",
    "husky": "^8.0.0",
    "jest-environment-jsdom": "^30.1.2",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.0.0",
    "prisma": "^4.0.0",
    "ts-jest": "^29.4.2",
    "ts-node": "^10.9.2",
    "typescript": "^4.0.0"
  },
  "lint-staged": {
    "*.{js,ts,json}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vietcoder1998/calendar-todo-backend.git"
  },
  "bugs": {
    "url": "https://github.com/vietcoder1998/calendar-todo-backend/issues"
  },
  "homepage": "https://github.com/vietcoder1998/calendar-todo-backend#readme"
}
